general {
  colors = true
    interval = 1
}

order += "disk /"
order += "battery all"
order += "tztime local"
order += "volume master"

battery all {
  format = "%status %percentage" 
    status_chr = "âš¡"
    status_bat = "ðŸ”‹"
    status_full = "FULL"
    integer_battery_capacity = true
    last_full_capacity = true
}

tztime local {
  format = "%d-%m-%Y %H:%M:%S"
}

disk "/" {
  format = "%free"
}

volume master {
  format = "%volume"
    format_muted = "muted (%volume)"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}
